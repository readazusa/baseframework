<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>


    <typeAliases>
        <typeAlias type="cn.com.oceansoft.sys.dept.model.DeptInfo" alias="DeptInfo"></typeAlias>
        <typeAlias type="cn.com.oceansoft.sys.resource.model.ResourceInfo" alias="ResourceInfo"></typeAlias>
        <typeAlias type="cn.com.oceansoft.sys.role.model.RoleInfo" alias="RoleInfo"></typeAlias>
        <typeAlias type="cn.com.oceansoft.sys.user.model.UserInfo" alias="UserInfo"></typeAlias>
        <typeAlias type="cn.com.oceansoft.base.entity.BasePageReqEntity" alias="BasePageReqEntity"></typeAlias>
    </typeAliases>

    <mappers>
        <mapper resource="cn/com/oceansoft/sys/dept/model/mybatis/DeptInfo.xml"></mapper>
        <mapper resource="cn/com/oceansoft/sys/resource/model/mybatis/ResourceInfo.xml"></mapper>
        <mapper resource="cn/com/oceansoft/sys/role/model/mybatis/RoleInfo.xml"></mapper>
        <mapper resource="cn/com/oceansoft/sys/user/model/mybatis/UserInfo.xml"></mapper>
        <mapper resource="cn/com/oceansoft/base/shiro/dao/mybatis/ShiroAuth.xml"></mapper>

    </mappers>

</configuration>
 
